# Auto detect text files and perform LF normalization
*                   text=auto

# Source code files should use LF for consistency across platforms
*.cs                text diff=csharp eol=lf
*.cshtml            text diff=html eol=lf

# Project and configuration files should use LF
*.sln               text eol=lf
*.csproj            text eol=lf
*.vcproj            text eol=lf
*.sqlproj           text eol=lf
*.config            text eol=lf

*.xproj             text eol=lf
*.props             text eol=lf
*.filters           text eol=lf
*.vcxitems          text eol=lf

*.yaml              text eol=lf
*.yml               text eol=lf

*.css               text eol=lf diff=css
*.html              text eol=lf diff=html
*.js                text eol=lf
*.jsx               text eol=lf
*.ts                text eol=lf
*.tsx               text eol=lf

package.json        text eol=lf
package-lock.json   text eol=lf -diff

# Windows-specific files can use CRLF
*.bat               text eol=crlf
*.cmd               text eol=crlf

*.sql               linguist-detectable=true
*.sql               linguist-language=sql
.vscode/*.json      linguist-language=JSON-with-Comments
tsconfig.json       linguist-language=JSON-with-Comments

*.webm              binary
*.mp4               binary

*.svg               text eol=lf
*.ico               binary
*.gif               binary
*.pdf               binary
*.png               binary
*.jpg               binary
*.jpeg              binary
*.webp              binary

*.woff              binary
*.woff2             binary